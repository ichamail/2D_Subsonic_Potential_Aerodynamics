{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PYTHONPYCACHEPREFIX": "${workspaceFolder}/.gitignore/__pycache__" // Set the cache directory
            },
            "console": "externalTerminal"
        }
    ]
}
